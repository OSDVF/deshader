{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Library",
            "command": "zig",
            "args": [
                "build",
                "deshader",
                "-DwolfSSL=true",
                "-DlogIntercept=true",
                "-freference-trace",
                "--summary",
                "none",
            ],
            "problemMatcher": "$zig",
            "group": "build",
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Build Runner",
            "command": "zig",
            "args": [
                "build",
                "runner",
                "-DwolfSSL=true",
                "-freference-trace"
            ],
            "problemMatcher": "$zig",
            "group": "build",
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Symlink Libraries",
            "command": "zig-out/bin/deshader-run",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "DESHADER_REPLACE_ROOT": "zig-out/lib"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Run Example",
