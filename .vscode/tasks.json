{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create build ramdisk",
            "type": "shell",
            "command": "sudo",
            "args": [
                "sh",
                "-c",
                "mkdir -p ${workspaceFolder}/build && mount -t ramfs -o size=512m ramfs ${workspaceFolder}/build && chmod 777 ${workspaceFolder}/build"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Build Library",
            "command": "zig",
            "args": [
                "build",
                "deshader",
                "-DwolfSSL=true",
                "-DlogIntercept=true",
                "-freference-trace",
                "--summary",
                "none"
            ],
            "problemMatcher": "$zig",
            "group": "build",
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Build Runner",
            "command": "zig",
            "args": [
                "build",
                "runner",
                "-DwolfSSL=true",
                "-freference-trace"
            ],
            "problemMatcher": "$zig",
            "group": "build",
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Run Example",
            "command": "zig",
            "args": [
                "build",
                "examples-run",
                "-DwolfSSL=true",
                "-freference-trace"
            ],
            "problemMatcher": "$zig",
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Build Examples",
            "command": "zig",
            "args": [
                "build",
                "examples",
                "-DwolfSSL=true",
                "-freference-trace",
                "-DlogIntercept=true",
                "-DmemoryFrames=10",
                "--summary",
                "none"
            ],
            "problemMatcher": "$zig",
            "group": "build",
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Cross-compile Examples",
            "command": "zig",
            "args": [
                "build",
                "examples",
                "-fwine",
                "-Dtarget=x86_64-windows-gnu",
                "-freference-trace",
            ]
        },
        {
            "label": "Build Headers Generator",
            "command": "zig",
            "args": [
                "build",
                "generate_headers"
            ],
            "problemMatcher": "$zig",
            "group": "build",
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Generate Stubs",
            "command": "zig",
            "args": [
                "build",
                "generate_stubs"
            ],
            "problemMatcher": "$zig",
            "group": "build",
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Build Dependencies",
            "command": "zig",
            "args": [
                "build",
                "dependencies"
            ],
            "problemMatcher": "$zig",
            "group": "build",
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ]
}