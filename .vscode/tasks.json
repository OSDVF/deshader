{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create all ramdisks",
            "dependsOn": [
                "Create build ramdisk",
                "Create zig-out ramdisk",
                "Create .zig-cache ramdisk"
            ],
            "problemMatcher": []
        },
        {
            "label": "Create build ramdisk",
            "type": "shell",
            "command": "sudo",
            "args": [
                "sh",
                "-c",
                "mkdir -p ${workspaceFolder}/build && mount -t ramfs -o size=512m ramfs ${workspaceFolder}/build && chmod 777 ${workspaceFolder}/build"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Create zig-out ramdisk",
            "type": "shell",
            "command": "sudo",
            "args": [
                "sh",
                "-c",
                "mkdir -p ${workspaceFolder}/zig-out && mount -t ramfs -o size=256m ramfs ${workspaceFolder}/zig-out && chmod 777 ${workspaceFolder}/zig-out"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Create .zig-cache ramdisk",
            "type": "shell",
            "command": "sudo",
            "args": [
                "sh",
                "-c",
                "mkdir -p ${workspaceFolder}/.zig-cache && mount -t ramfs -o size=256m ramfs ${workspaceFolder}/.zig-cache && chmod 777 ${workspaceFolder}/.zig-cache"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Build Library",
            "command": "zig",
            "args": [
                "build",
                "deshader",
                "-DmemoryFrames=15",
                "-freference-trace",
                "--summary",
                "none"
            ],
            "problemMatcher": "$zig",
            "group": "build",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Build Documentation",
            "command": "zig",
            "args": [
                "build",
                "docs"
            ],
            "problemMatcher": "$zig",
            "group": "build",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Build Launcher",
            "command": "zig",
            "args": [
                "build",
                "launcher",
                "-freference-trace",
                "-DmemoryFrames=15"
            ],
            "problemMatcher": "$zig",
            "group": "build",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Start Editor Server",
            "dependsOn": [
                "Build Launcher"
            ],
            "command": "${workspaceFolder}/zig-out/bin/deshader-run",
            "options": {
                "env": {
                    "DESHADER_GUI": "hidden"
                }
            },
            "detail": "Must be terminated before another debugging session is started.",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ]
        },
        {
            "label": "Run Examples",
            "command": "zig",
            "args": [
                "build",
                "examples-run",
                "-freference-trace"
            ],
            "problemMatcher": "$zig",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Check errors",
            "command": "zig",
            "args": [
                "build",
                "examples",
                "-Dotype=None",
                "-Dllvm=false"
            ],
            "group": "build",
            "problemMatcher": "$zig"
        },
        {
            "label": "Check errors continuously",
            "command": "zig",
            "args": [
                "build",
                "examples",
                "-Dotype=None",
                "-Dllvm=false",
                "-Ddependencies=false",
                "-fincremental",
                "--watch",
                "--summary",
                "none"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build Examples",
            "command": "zig",
            "args": [
                "build",
                "examples",
                "-freference-trace",
                "-DlogInterception",
                "-DmemoryFrames=15",
                "-Ddependencies=false",
                "--summary",
                "none"
            ],
            "problemMatcher": "$zig",
            "group": "build",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Cross-compile Examples",
            "command": "zig",
            "args": [
                "build",
                "examples",
                "-fwine",
                "-Dtarget=x86_64-windows-gnu",
                "-DlogInterception",
                "-freference-trace"
            ],
            "problemMatcher": "$zig",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Cross-compile Deshader",
            "command": "zig",
            "args": [
                "build",
                "deshader",
                "-fwine",
                "-Dtarget=x86_64-windows-gnu",
                "-DlogInterception",
                "-freference-trace"
            ],
            "group": "build",
            "problemMatcher": "$zig",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Cross-compile Launcher",
            "command": "zig",
            "args": [
                "build",
                "launcher",
                "-fwine",
                "-Dtarget=x86_64-windows-gnu",
                "-freference-trace"
            ],
            "problemMatcher": "$zig",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Start LLDB Server",
            "command": "pkexec",
            "args": [
                "lldb-server",
                "platform",
                "--listen",
                "*:1234",
                "--server"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build and run Headers Generator",
            "command": "zig",
            "args": [
                "build",
                "generate_headers"
            ],
            "problemMatcher": "$zig",
            "group": "build",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Generate Stubs",
            "command": "zig",
            "args": [
                "build",
                "generate_stubs"
            ],
            "problemMatcher": "$zig",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Build Dependencies",
            "command": "zig",
            "args": [
                "build",
                "vcpkg",
                "editor"
            ],
            "problemMatcher": "$zig",
            "group": "build",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Cross-build Dependencies",
            "command": "zig",
            "args": [
                "build",
                "dependencies",
                "-fwine",
                "-Dtarget=x86_64-windows-gnu"
            ],
            "problemMatcher": "$zig",
            "group": "build",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Min Brightness",
            "command": "gdbus",
            "args": [
                "call",
                "--session",
                "--dest",
                "org.gnome.SettingsDaemon.Power",
                "--object-path",
                "/org/gnome/SettingsDaemon/Power",
                "--method org.freedesktop.DBus.Properties.Set",
                "org.gnome.SettingsDaemon.Power.Screen",
                "Brightness",
                "<int32 0>"
            ],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "Max Brightness",
            "command": "gdbus",
            "args": [
                "call",
                "--session",
                "--dest",
                "org.gnome.SettingsDaemon.Power",
                "--object-path",
                "/org/gnome/SettingsDaemon/Power",
                "--method org.freedesktop.DBus.Properties.Set",
                "org.gnome.SettingsDaemon.Power.Screen",
                "Brightness",
                "<int32 100>"
            ],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        }
    ]
}