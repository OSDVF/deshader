{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create build ramdisk",
            "type": "shell",
            "command": "sudo",
            "args": [
                "sh",
                "-c",
                "mkdir -p ${workspaceFolder}/build && mount -t ramfs -o size=512m ramfs ${workspaceFolder}/build && chmod 777 ${workspaceFolder}/build"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Create zig-out ramdisk",
            "type": "shell",
            "command": "sudo",
            "args": [
                "sh",
                "-c",
                "mkdir -p ${workspaceFolder}/zig-out && mount -t ramfs -o size=256m ramfs ${workspaceFolder}/zig-out && chmod 777 ${workspaceFolder}/zig-out"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Build Library",
            "command": "zig",
            "args": [
                "build",
                "deshader",
                "-DlogIntercept",
                "-DmemoryFrames=15",
                "-freference-trace",
                "--summary",
                "none"
            ],
            "problemMatcher": "$zig",
            "group": "build",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Build Documentation",
            "command": "zig",
            "args": [
                "build",
                "docs"
            ],
            "problemMatcher": "$zig",
