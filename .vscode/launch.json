{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Runner",
            "type": "gdb",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "target": "./zig-out/bin/deshader-run",
            "preLaunchTask": "Build Runner",
            "arguments": "zig-out/bin/example < zig-out/yes.txt",
            "env": {
                "DESHADER_REPLACE_ROOT": "zig-out/lib",
                "DESHADER_LIB_ROOT": "/usr/lib/",
            },
        },
        {
            "name": "Generate Stubs",
            "type": "gdb",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "target": "./zig-out/bin/generate_stubs",
            "preLaunchTask": "Build Generate Stubs",
        },
        {
            "type": "gdb",
            "request": "launch",
            "name": "Examples",
            "target": "./zig-out/bin/examples",
            "cwd": "${workspaceRoot}",
            "valuesFormatting": "parseText",
            "preLaunchTask": "Build Example",
            "env": {
                "LD_PRELOAD": "${workspaceRoot}/zig-out/lib/libdeshader.so",
                "DESHADER_LIB_ROOT": "/usr/lib/",
            }
        },
        {
            "type": "gdb",
            "request": "launch",
            "name": "Editor",
            "target": "./zig-out/bin/example/editor",
            "cwd": "${workspaceRoot}",
            "valuesFormatting": "parseText",
            "preLaunchTask": "Build Example",
            "autorun": [
                "set environment LD_PRELOAD ${workspaceRoot}/zig-out/lib/libdeshader.so"
            ],
            "env": {
                "DESHADER_LIB_ROOT": "/usr/lib/",
                "DESHADER_COMMANDS_WS": "8082"
            }
        },
        {
            "type": "gdb",
            "request": "launch",
            "name": "GLFW",
            "target": "./zig-out/bin/example/glfw",
            "cwd": "${workspaceRoot}",
            "valuesFormatting": "parseText",
            "preLaunchTask": "Build Example",
            "autorun": [
                "set environment LD_PRELOAD ${workspaceRoot}/zig-out/lib/libdeshader.so"
            ],
            "env": {
                "DESHADER_IGNORE_PROCESS": "gdb,zsh",
                "DESHADER_LIB_ROOT": "/usr/lib/",
                "DESHADER_COMMANDS_WS": "8082"
            }
        },
        {
            "type": "gdb",
            "request": "launch",
            "name": "abi",
            "target": "./zig-out/bin/example/abi",
            "cwd": "${workspaceRoot}",
            "valuesFormatting": "parseText",
            "preLaunchTask": "Build Example",
        },
        {
            "type": "gdb",
            "request": "launch",
            "name": "Header Generator",
            "target": "./zig-out/bin/generate_header",
            "cwd": "${workspaceRoot}",
            "valuesFormatting": "parseText",
            "preLaunchTask": "Build Headers Generator",
        }        
    ]
}