{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Runner",
            "type": "gdb",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "target": "./zig-out/bin/deshader-run",
            "preLaunchTask": "Build Runner",
            "arguments": "zig-out/bin/example < zig-out/yes.txt",
            "env": {
                "DESHADER_REPLACE_ROOT": "zig-out/lib",
                "DESHADER_LIB_ROOT": "/usr/lib/",
            },
        },
        {
            "name": "Generate Stubs",
            "type": "gdb",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "target": "./zig-out/bin/generate_stubs",
            "preLaunchTask": "Build Generate Stubs",
        },
        {
            "type": "gdb",
            "request": "launch",
            "name": "Examples",
            "target": "./zig-out/bin/examples",
            "cwd": "${workspaceRoot}",
            "valuesFormatting": "parseText",
            "preLaunchTask": "Build Example",
            "env": {
                "__GLX_VENDOR_LIBRARY_NAME": "nvidia",
                "__NV_PRIME_RENDER_OFFLOAD": "1",
                "__VK_LAYER_NV_optimus": "NVIDIA_only",
                "LD_LIBRARY_PATH": "${workspaceRoot}/zig-out/lib",
                "DESHADER_LIB_ROOT": "/usr/lib/",
            }
        },
        {
            "type": "gdb",
            "request": "launch",
            "name": "Editor",
            "target": "./zig-out/bin/example/editor",
            "cwd": "${workspaceRoot}",
            "valuesFormatting": "parseText",
            "preLaunchTask": "Build Example",
            "env": {
                "__GLX_VENDOR_LIBRARY_NAME": "nvidia",
                "__NV_PRIME_RENDER_OFFLOAD": "1",
                "__VK_LAYER_NV_optimus": "NVIDIA_only",
                "LD_LIBRARY_PATH": "${workspaceRoot}/zig-out/lib",
                "DESHADER_LIB_ROOT": "/usr/lib/",
                "DESHADER_COMMANDS_WS" : "8082"
            }
        },
        {
            "type": "gdb",
            "request": "launch",
            "name": "Editor",
            "target": "./zig-out/bin/example/editor",
            "cwd": "${workspaceRoot}",
            "valuesFormatting": "parseText",
            "preLaunchTask": "Build Example",
            "env": {
                "__GLX_VENDOR_LIBRARY_NAME": "nvidia",
                "__NV_PRIME_RENDER_OFFLOAD": "1",
                "__VK_LAYER_NV_optimus": "NVIDIA_only",
                "LD_LIBRARY_PATH": "${workspaceRoot}/zig-out/lib",
                "DESHADER_LIB_ROOT": "/usr/lib/",
                "DESHADER_COMMANDS_WS" : "8082"
            }
        },
    ]
}